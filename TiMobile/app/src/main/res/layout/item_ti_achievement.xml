<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:gravity="center_vertical"
  android:padding="@dimen/_10sdp">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imgMedal"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_centerVertical="true"
    tools:src="@drawable/ic_achievement_green"
    />


  <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_toLeftOf="@+id/tvRedeem"
    android:layout_toRightOf="@id/imgMedal"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tvTitle"
      style="@style/SemiBoldFont"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/selfie_up"
      android:textColor="@color/dark_gray"
      android:textSize="13sp" />

    <TextView
      android:id="@+id/tvDescription"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/_5sdp"
      android:ellipsize="end"
      android:maxLines="2"
      android:text="@string/selfie_text"
      android:textColor="@color/dark_gray"
      android:textSize="12sp" />
  </LinearLayout>
</RelativeLayout>
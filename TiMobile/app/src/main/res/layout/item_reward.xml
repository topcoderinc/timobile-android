<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <com.topcoder.timobile.customviews.roundimageview.RoundedImageView
      android:id="@+id/imgReward"
      android:layout_width="@dimen/_75sdp"
      android:layout_height="@dimen/_100sdp"
      android:layout_marginTop="@dimen/_10sdp"
      android:scaleType="fitXY"
      android:src="@drawable/ic_card_close"
      app:riv_border_color="@color/card_border"
      app:riv_border_width="@dimen/_2sdp"
      app:riv_corner_radius="@dimen/_3sdp"
      />

  <TextView
      android:id="@+id/tvName"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_10sdp"
      android:ellipsize="end"
      android:gravity="center"
      android:maxLines="2"
      android:textSize="10sp"
      tools:text="Card Name Lorem posem"
      />
</LinearLayout>